datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Analysis {
  id            Int      @id @default(autoincrement())
  city          String
  country       String

  temperature   Float
  rainfall      Float
  humidity      Float

  riskScore     Int
  riskLevel     String

  minLoss       Float
  maxLoss       Float

  recommendations Json

  createdAt     DateTime @default(now())
}
